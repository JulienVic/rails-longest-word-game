<h1>New game</h1>

<div class="card">
  <ul>
    <% @letters.split(' ').each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>
</div>

<h2>What is the longest word you can find?</h2>
<form action="/score" method="post">
  <input type="text" name="word" placeholder="Write a word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
